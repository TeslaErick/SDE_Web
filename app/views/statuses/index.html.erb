<div class="page-header">
  <h1>Todos los Post's</h1>
  <%= link_to 'New Status', new_status_path, class: "btn btn-success" %>
</div>
<% @statuses.each do |status| %>
  <div class="status">
    <strong><%= status.nombre %></strong>
    <p><%= status.contenido %></p>
    <div>
      <%= link_to "Hace "+ time_ago_in_words(status.created_at) %>
      <span class="admin">
        <%= link_to "Editar", edit_status_path(status) %>
        <%= link_to 'Eliminar', status, method: :delete, data: { confirm: 'Estas seguro de Eliminar' } %>
      </span>
    </div>
  </div>


<% end %>